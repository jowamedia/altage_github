{% extends 'AltageGastroCmd::app_layout.html.twig' %}

{% block title %}Aper√ßu des commandes - {{ parent() }} {% endblock %}

{% block main_content %}

{% set MondaySelected = "monday this week"|date("m/d/Y") %} 
{% set WeekDays = ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"] %}
{% set CSSwidgetDayColour = ["widget-color-red2", "widget-color-orange", "widget-color-red", "widget-color-green", "widget-color-blue", "widget-color-blue3", "widget-color-purple"]%}


				<div class="page-content">
					<!-- #section:settings.box -->
					<!-- /section:settings.box -->
					<div class="page-header">
						<h1>
							Commande des menus
							<small>
								<i class="ace-icon fa fa-angle-double-right"></i>
								aper&ccedil;u de la semaine
							</small>
						</h1>
					</div><!-- /.page-header -->

					<div class="row">
						<div class="col-xs-12">
							<!-- PAGE CONTENT BEGINS -->
								<!-- #section:pages/pricing.small-body -->
								<h4 class="row header smaller lighter blue">
								    <span class="col-sm-3">
                                        <span class="label label-primary arrowed arrowed-in-right"> {{ "monday this week"|date_modify("-1 week")|localizeddate("full","none", "fr-FR","Europe/Zurich", "ww") }} </span>
                                            <small>semaine {{"monday this week"|date_modify("+0 week")|localizeddate("full","none", "fr-FR","Europe/Zurich", "ww") }}</small>
                                        <span class="label label-primary arrowed-right arrowed-in"> {{ "monday this week"|date_modify("+1 week")|localizeddate("full","none", "fr-FR","Europe/Zurich", "ww") }} </span>
                                    </span>
                                    <span class="col-sm-9">
										Semaine du {{ "monday this week"|localizeddate("full","none", "fr-FR","Europe/Zurich", "EEEE dd") }} au {{ 'sunday this week'|localizeddate("full","none", "fr-FR","Europe/Zurich", "EEEE dd MMMM yyyy") }}
                                    </span>
                                </h4>
								<div class="col-xs-12 col-sm-12 pricing-span-body">

        {% for day in 0..6 %}{# 7 jours de la semaine #}
              
                    <div class="pricing-span">
										<div class="widget-box pricing-box-small {{ CSSwidgetDayColour[day] }} ">
											<div class="widget-header">
												<h5 class="widget-title bigger lighter">{{ (WeekDays[day]~" this week")|localizeddate("full","none", "fr-FR","Europe/Zurich", "EEEE dd MMMM") }}</h5>
											</div>

											<div class="widget-body">
												<div class="widget-main no-padding">
													<ul class="list-unstyled list-striped pricing-table">
														<li> 
														    <div class="space-6"></div>
														    <h5>midi</h5>
														    <button onClick="location.href='{{ path('_cmdMenusForm', {'date':(WeekDays[day]~' this week')|date('dmY', 'Europe/Zurich'), 'am_pm': 'am'} ) }}'" class="btn btn-app btn-success">
														      <i class="ace-icon fa fa-cutlery"></i>
														      23
                                                           </button>
                                                           <div class="space-6"></div>
														</li>
														<li> 
														    <div class="space-6"></div>
														    <h5>soir</h5>
														    <button  onClick="location.href='{{ path('_cmdMenusForm', {'date':(WeekDays[day]~' this week')|date('dmY', 'Europe/Zurich'), 'am_pm': 'pm'}) }}'"class="btn btn-app btn-success">
														      <i class="ace-icon fa fa-cutlery"></i>
														      21
                                                           </button>
                                                           <div class="space-6"></div>
														</li>
													</ul>

												</div>

											</div>
										</div>
									</div>
                                  
            {% endfor %}
            
								</div>

								<!-- /section:pages/pricing.small-body -->

							<!-- #section:custom/extra.hr -->
							<div class="hr hr32 hr-dotted"></div>
							<!-- /section:custom/extra.hr -->

							<!-- PAGE CONTENT ENDS -->
						</div><!-- /.col -->
					</div><!-- /.row -->
				</div><!-- /.page-content -->

{% endblock %}
