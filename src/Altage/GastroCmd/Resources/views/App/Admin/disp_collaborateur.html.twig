{% extends 'AltageGastroCmd::app_layout.html.twig' %}
{% set collaborateurs = collaborateur %}

{% block title %}Gérer les collaborateurs  - {{ parent() }} {% endblock %}

{% block main_content %}
    
				<div class="page-content">
					<div class="page-header">
						<h1>
							Administration
							<small>
								<i class="ace-icon fa fa-angle-double-right"></i>
								Gérer les collaborateurs
							</small>
						</h1>
					</div><!-- /.page-header -->

					<div class="row">
						<div class="col-xs-12">
							<!-- PAGE CONTENT BEGINS -->
							<div class="row">
								<div class="col-xs-12">
									<table id="sample-table-1" class="table table-striped table-bordered table-hover">
										<thead>
											<tr>
												<th>Nom</th>
												<th>Pr&eacute;nom</th>
												<th>Date d'entrée</th>
												<th>Date de sortie</th>
                        <th>Actif</th>
												<th></th>
											</tr>
										</thead>

										<tbody>
                      {% for collaborateur in collaborateurs %}
											<tr>
												<td>{{ collaborateur.lastname }}</td>
												<td>{{ collaborateur.firstname }}</td>
												<td>{{ collaborateur.entryDate|date("d.m.Y") }}</td>
												<td>{{ collaborateur.leaveDate|date("d.m.Y") }}</td>
                        <td>{% if collaborateur.isActive %}
                                <i class="ace-icon fa fa-check green"></i>
                            {% else %}
                                <i class="ace-icon glyphicon glyphicon-remove red"></i>
                            {% endif %}
                        </td>
												<td>
													<div class="hidden-sm hidden-xs btn-group">
														<a href="{{ path('_AdminEditCollaborateur', { 'id': collaborateur.id } ) }}">
															<button class="btn btn-xs btn-info">
																<i class="ace-icon fa fa-pencil bigger-120"></i>
															</button>
														</a>														
													</div>
												</td>
											</tr>
                      {% endfor %}
										</tbody>
									</table>
								</div><!-- /.span -->
							</div><!-- /.row -->
            </div><!-- /.page-content -->
          </div><!-- /.main-content -->
        </div>
{% endblock %}